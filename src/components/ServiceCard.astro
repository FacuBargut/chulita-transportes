---
interface Props {
  name: string;
  description: string;
  icon: ImageMetadata;
}

import { Image } from "astro:assets";

const { name, description, icon } = Astro.props;
---

<div class="card-service">
  <div class="card-service__icon-container">
    <Image src={icon} alt="Logo de la empresa" />
  </div>
  <div class="card-service__data">
    <h3>
      {name}
    </h3>
    <p>
      {description}
    </p>
  </div>
</div>

<style>
  .card-service {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100px;
    cursor: pointer;
  }

  .card-service__data {
    display: flex;
    flex-direction: column;
    border: 1px solid #f7f7f7;
    justify-content: center;
    border-radius: 0px 10px 10px 0px;
    padding: 0px 20px;
    background-color: #f7f7f7;
    width: 60%;
    h3 {
      color: #0c134f;
      font-size: 18px;
    }
    p {
      color: #727272;
      font-size: 14px;
      font-weight: 200;
    }
  }

  .card-service__icon-container {
    display: flex;
    flex-direction: column;
    background-color: #0c134f;
    color: #fff;
    align-items: center;
    justify-content: center;
    border-radius: 10px 0 0 10px;
    width: 40%;
    padding: 1rem 0px;
    img {
      width: 50px;
      height: 50px;
    }
  }
</style>
