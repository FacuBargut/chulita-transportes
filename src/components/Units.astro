---
import Title from "./Title.astro";

import unit1 from "../assets/units/unit-1.png";
import unit2 from "../assets/units/unit-2.png";

import { Image } from "astro:assets";
---

<section class="units" id="units">
  <Title title="Unidades" />

  <div class="pswp-gallery gallery" id="gallery">
    <a
      href={unit1.src}
      data-pswp-width="1875"
      data-pswp-height="1500"
      target="_blank"
    >
      <Image src={unit1} alt={"Unidad 1"} />
    </a>
    <a
      href={unit2.src}
      data-pswp-width="1875"
      data-pswp-height="1500"
      target="_blank"
    >
      <Image src={unit2} alt={"Unidad 1"} />
    </a>
  </div>
</section>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  import "photoswipe/style.css";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>

<style>
  #gallery {
    margin-top: 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 40px;
    a {
      img {
        height: auto;
        max-width: 100%;
      }
    }
    @media screen and (min-width: 576px) {
      flex-direction: row;
    }
  }
</style>
